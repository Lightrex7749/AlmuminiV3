# Production Environment Variables Template
# Copy this to .env in backend/ folder and update with your production values

# ============================================================================
# DATABASE CONFIGURATION (Railway MySQL)
# ============================================================================
DB_HOST=yamabiko.proxy.rlwy.net
DB_PORT=42030
DB_USER=root
DB_PASSWORD=dHWAplhWXQrMGslMpLEaIJrNJWOTSunB
DB_NAME=railway
USE_MOCK_DB=false

# ============================================================================
# JWT AUTHENTICATION
# ============================================================================
# CRITICAL: Change this to a strong secret in production!
# Generate with: openssl rand -hex 32
JWT_SECRET_KEY=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_IN_PRODUCTION
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8001
API_RELOAD=false

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Update with your Netlify frontend URL
FRONTEND_URL=https://your-app.netlify.app
CORS_ORIGINS=https://your-app.netlify.app,http://localhost:3000

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@yourdomain.com

# ============================================================================
# REDIS CONFIGURATION (Optional - for caching)
# ============================================================================
REDIS_URL=redis://localhost:6379

# ============================================================================
# FILE UPLOAD CONFIGURATION
# ============================================================================
MAX_UPLOAD_SIZE=10485760
UPLOAD_DIR=/tmp/uploads

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FILE=/tmp/app.log

# ============================================================================
# SECURITY
# ============================================================================
# CRITICAL: Change default admin password on first login!
DEFAULT_ADMIN_PASSWORD=Admin@123
REQUIRE_EMAIL_VERIFICATION=true
