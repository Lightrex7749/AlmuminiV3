# Database Configuration
# Set to false when using Railway MySQL, true for mock mode
USE_MOCK_DB=true

# Railway MySQL Connection
# Get these from Railway dashboard → MySQL → Variables tab
# Or use your own MySQL database
DB_HOST=your-railway-host.railway.app
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your-railway-password
DB_NAME=railway

# MySQL Connection URL (alternative format)
MYSQL_URL=mysql://user:password@host:3306/database

# JWT Secret (change this in production!)
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS Origins
CORS_ORIGINS=*

# Application Settings
DEBUG=True

# ============================================================================
# OPTIONAL: AI CONFIGURATION (if using AI features)
# ============================================================================

# Gemini AI Configuration (Primary)
GEMINI_API_KEY=your-gemini-api-key-here
GEMINI_MODEL=gemini-1.5-pro
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/

# OpenAI Configuration (Fallback)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4

# ============================================================================
# OPTIONAL: EMAIL CONFIGURATION
# ============================================================================
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@alumunity.com
SENDGRID_FROM_NAME=AlumUnity

# ============================================================================
# OPTIONAL: REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
